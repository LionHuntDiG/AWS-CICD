#!/bin/bash

set -e

CATALINA_HOME=/usr/share/tomcat7-codedeploy
TOMCAT_VERSION=7.0.77

# Tar file name
TOMCAT7_CORE_TAR_FILENAME="apache-tomcat-$TOMCAT_VERSION.tar.gz"
# Updated Download URL for Tomcat7 core
TOMCAT7_CORE_DOWNLOAD_URL="https://archive.apache.org/dist/tomcat/tomcat-7/v$TOMCAT_VERSION/bin/$TOMCAT7_CORE_TAR_FILENAME"
# The top-level directory after unpacking the tar file
TOMCAT7_CORE_UNPACKED_DIRNAME="apache-tomcat-$TOMCAT_VERSION"

# Check whether there exists a valid instance of Tomcat7 installed at the specified directory
if [[ -d $CATALINA_HOME ]]; then
    if service tomcat7 status > /dev/null 2>&1; then
        echo "Tomcat7 is already installed at $CATALINA_HOME. Skipping reinstallation."
        exit 0
    fi
fi

# Clear install directory
if [ -d $CATALINA_HOME ]; then
    rm -rf $CATALINA_HOME
fi
mkdir -p $CATALINA_HOME

# Install wget if not present
if ! command -v wget &> /dev/null; then
    echo "Installing wget..."
    sudo yum install -y wget || sudo apt-get install -y wget
fi

# Download the latest Tomcat7 version
cd /tmp
echo "Downloading Tomcat from $TOMCAT7_CORE_DOWNLOAD_URL..."
wget $TOMCAT7_CORE_DOWNLOAD_URL

# Remove any previous extracted directory
if [[ -d /tmp/$TOMCAT7_CORE_UNPACKED_DIRNAME ]]; then
    rm -rf /tmp/$TOMCAT7_CORE_UNPACKED_DIRNAME
fi

# Extract the downloaded tar file
tar xzf $TOMCAT7_CORE_TAR_FILENAME

# Copy over to the CATALINA_HOME
cp -r /tmp/$TOMCAT7_CORE_UNPACKED_DIRNAME/* $CATALINA_HOME

# Install Java if not yet installed
if ! command -v java &> /dev/null; then
    echo "Installing Java..."
    sudo yum install -y java-1.8.0-openjdk || sudo apt-get install -y openjdk-8-jdk
fi

# Create the service init.d script
cat > /etc/init.d/tomcat7 <<'EOF'
#!/bin/bash
# description: Tomcat7 Start Stop Restart
# processname: tomcat7
PATH=$JAVA_HOME/bin:$PATH
export PATH
CATALINA_HOME='/usr/share/tomcat7-codedeploy'

case $1 in
start)
sh $CATALINA_HOME/bin/startup.sh
;;
stop)
sh $CATALINA_HOME/bin/shutdown.sh
;;
restart)
sh $CATALINA_HOME/bin/shutdown.sh
sh $CATALINA_HOME/bin/startup.sh
;;
esac
exit 0
EOF

# Change permission mode for the service script
chmod 755 /etc/init.d/tomcat7

# Add Tomcat to system startup and start the service
sudo chkconfig --add tomcat7 || sudo update-rc.d tomcat7 defaults
sudo service tomcat7 start

echo "Tomcat installation and setup complete."
